# Rename this file to secrets.toml and add your actual keys
# DO NOT commit secrets.toml to git

# OpenAI Configuration
OPENAI_API_KEY = "your-openai-api-key-here"

# ChromaDB Cloud Configuration  
CHROMADB_API_KEY = "your-chromadb-api-key-here"
CHROMADB_TENANT = "your-chromadb-tenant-id"
CHROMADB_DATABASE = "your-chromadb-database-name"

# Authentication Secret (generate a random string)
AUTH_SECRET_KEY = "your-secret-key-for-jwt-tokens"

# Database URL for user management (PostgreSQL recommended for production)
DATABASE_URL = "sqlite:///./users.db"  # For development
# DATABASE_URL = "postgresql://user:password@host:port/dbname"  # For production